.tracking_details_table td {
    padding: 0 0 10px 0;
}

.track-detail-status {
    background-image: url('/assets/widget/img/status.png');
    background: url(<%=asset_path("aftership/horiz-lines.png")%>);
    background-repeat: no-repeat;
    background-position: -125px center
}

.track-detail-status-icon {
    background: url(<%=asset_path("aftership/status_icon.png")%>);
    width: 25px;
    height: 25px;
    margin-left: auto;
    margin-right: auto;
}

.track-detail-status-icon.intransit {
    background-position: 0 0
}

.track-detail-status-icon.delivered {
    background-position: -25px 0
}

.track-detail-status-icon.exception {
    background-position: -50px 0
}

.track-detail-status-icon.outfordelivery {
    background-position: -75px 0
}

.track-detail-status-icon.expired {
    background-position: -100px 0
}

.track-detail-status-icon.attemptfail {
    background-position: -125px 0
}

.track-detail-status-icon.inforeceived {
    background-position: -150px 0
}

.tracking_details_table td.icon {

    width: 50px;
    padding-right: 15px;
    vertical-align: top;
}

.tracking_details_table td.track-detail-datetime {
    width: 10%;
}

.track-detail-status.down {
    background-position: -25px -175px;
}




