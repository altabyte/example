<div id="sign-in">
  <%= image_tag('om_logo.png') %>  <br>
  <%= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"} do |f| %>
      <br>
      <%= devise_error_messages! %>
      <%= f.inputs do %>
          <%= f.input :email, :label => nil, :input_html => {:placeholder => t('devise.sessions.new.email_placeholder')} %>
          <%= f.input :password, :label => nil, :input_html => {:placeholder => t('devise.sessions.new.password_placeholder')} %>
          <div id="btn_login"> <%= f.submit t('devise.sessions.new.login'), :class => 'btn btn-primary btn-block', :id => 'btn_login_button' %>
          </div>
      <% end %>
  <% end %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %>
</div>

